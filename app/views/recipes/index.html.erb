<h1 class="my-5 text-center">Your recipes</h1>
<% if @recipes.blank? %>
  <h2>You don't have any existing recipe of your own!<h2>
<% else %>
  <% @recipes.each do |recipe| %>
    <article class="row d-flex border p-3 mb-5">
      <div class="col-md-4">
        <h2><%= link_to recipe.name, recipe_path(recipe.id), method: :get %></h2>
        <%= link_to 'Remove', recipe_path(recipe.id), data: { "turbo-method": :delete } %>
      </div>
      <div class="col-md-8">
        <p><%= recipe.description %></p>
      </div>
    </article>
  <% end %>  
<% end %>
<%= link_to 'Add new recipe', new_recipe_path %>